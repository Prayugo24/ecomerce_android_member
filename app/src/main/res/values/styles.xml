<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeActionbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_material_dark_1</item>
    </style>

    <style name="MaterialDarknes" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="primarydark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="s" parent="primarydark">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="CompatDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="App" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warna_ket</item>
    </style>

    <style name="detailBrgKiri">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/border_solid</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="detailBrgKanan">
        <!-- Customize your theme here. -->
        <item name="android:background">@drawable/border_no</item>
        <item name="android:padding">7dp</item>
    </style>


</resources>
