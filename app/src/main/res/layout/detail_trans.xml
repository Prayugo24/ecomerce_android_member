<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_no">

            <TableRow
                android:padding="0dp"
                android:weightSum="3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:layout_weight="1"
                    android:text="ID TRANSAKSI"
                    style="@style/detailBrgKiri"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" />

                <TextView
                    android:id="@+id/textViewidtransaksi22"
                    style="@style/detailBrgKanan"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
            </TableRow>

            <TableRow
                android:padding="0dp"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:text="TANGGAL"
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textviewtgl_trans22"
                    style="@style/detailBrgKanan"
                    android:layout_weight="2"
                    android:layout_height="wrap_content" />
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/listviewdetail22"
            android:layout_width="wrap_content"
            android:layout_height="183dp"
            android:layout_margin="10dp">
        </ListView>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/border_no">

            <TableRow
                android:padding="0dp"
                android:weightSum="2"
                android:layout_width="wrap_content">

                <TextView
                    android:layout_weight="1"
                    android:text="SUB TOTAL"
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textViewsubt22"
                    style="@style/detailBrgKanan"
                    android:layout_weight="1"
                     />
            </TableRow>

            <TableRow
                android:padding="0dp"
                android:weightSum="2" >

                <TextView
                    android:layout_weight="1"
                    android:text="ONGKIR"
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textViewongkir22"
                    style="@style/detailBrgKanan"
                    android:layout_weight="1"
                    />
            </TableRow>

            <TableRow
                android:padding="0dp"
                android:weightSum="2" >

                <TextView
                    android:layout_weight="1"
                    android:text="TOTAL"
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textViewttl22"
                    style="@style/detailBrgKanan"
                    android:layout_weight="1"
                    android:textAlignment="textEnd" />
            </TableRow>

            <TableRow
                android:padding="0dp"
                android:weightSum="2" >

                <TextView
                    android:layout_weight="1"
                    android:text="KURIR"
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textViewkurir"
                    style="@style/detailBrgKanan"
                    android:layout_weight="1" />
            </TableRow>
            <TableRow
                android:padding="0dp"
                android:weightSum="2" >

                <TextView
                    android:layout_weight="1"
                    android:text="a.n."
                    style="@style/detailBrgKiri"/>

                <TextView
                    android:id="@+id/textatasnama2"
                    style="@style/detailBrgKanan"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="ALAMAT"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewAlamat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textviewkec2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewkab2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewprof2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewkodepos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textViewtlp2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/textviResi22"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_margin="10dp" />


        <Button
            android:id="@+id/btncek"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/linear"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.41"
            android:background="@color/colorPrimary"
            android:text="CEK RESI"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttokonb"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:background="@color/colorPrimary"
            android:text="KONFIRMASI BAYAR"
            android:textColor="@android:color/white" />
    </LinearLayout>
</ScrollView>