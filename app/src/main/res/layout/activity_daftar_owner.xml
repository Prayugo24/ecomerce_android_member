        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:id="@+id/owner_telp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="3dp"
                android:src="@drawable/icon_phone" />

            <ImageView
                android:id="@+id/owner_sms"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="3dp"
                android:src="@drawable/icon_sms" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/owner_browser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="3dp"
                android:src="@drawable/ic_browser" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="3dp">

            <ImageView
                android:id="@+id/owner_wa"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="3dp"
                android:src="@drawable/icon_wa"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/owner_bbm"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="3dp"
                android:src="@drawable/icon_bbm"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/owner_line"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:adjustViewBounds="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/icon_line"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
